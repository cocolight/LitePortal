{
  "name": "backend",
  "version": "0.0.1",
  "description": "NestJS backend application",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rimraf dist && nest build -p tsconfig.build.json -b swc",
    "build:prod": "npm run build",
    "build:tsc": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only -P tsconfig.json src/main.ts",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch --preserveWatchOutput",
    "start:prod": "cross-env NODE_ENV=production node -r source-map-support/register dist/main",
    "start:prod:cluster": "cross-env NODE_ENV=production node -r source-map-support/register dist/main --cluster",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"*.md\"",
    "code:check": "npm run lint:ci && npm run format:check && npm run test",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit --detectOpenHandles",
    "test:verbose": "jest --verbose",
    "clean": "rimraf dist coverage node_modules/.cache",
    "docker:build": "docker build -t backend .",
    "docker:run": "docker run -p 3000:3000 backend"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/../test/setup.ts"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "packageManager": "pnpm@8.15.5"
  }
}